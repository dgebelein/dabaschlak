<UserControl x:Class="dabaschlak.ViewFlaechenarbeiten"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dabaschlak"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
   <Grid>
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="1*" MinWidth="150"/>
		<ColumnDefinition Width="Auto"/>
		<ColumnDefinition Width="2*" MinWidth="250"/>
	</Grid.ColumnDefinitions>

	<local:ViewAuswahlFlaeche Grid.Column="0" />
	<GridSplitter Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Stretch" Width="3"  ShowsPreview="False" Background="Black"/>
	<local:ViewArbeitenListe Grid.Column="2" />

</Grid>
</UserControl>
