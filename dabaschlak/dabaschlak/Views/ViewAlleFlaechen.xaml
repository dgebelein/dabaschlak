				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:dabaschlak"
				mc:Ignorable="d" 
				d:DesignHeight="600" d:DesignWidth="900"
				Foreground="White"
				FontFamily="Calibri" FontSize="15" Loaded="UserControl_Loaded"
				
>

