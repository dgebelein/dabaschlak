               <Image Source="pack://application:,,,/TtpResources;Component/Images/openbook.png" Height="16"  Style="{StaticResource ButtonImageStyle}"/>
            </MenuItem.Icon>
         </MenuItem>
         <Separator/>
         <!--<MenuItem Header="neuen Versuch hinzufügen"				Command="{Binding Path=AddCommand}">
